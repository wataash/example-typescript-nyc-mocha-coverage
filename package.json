{
  "name": "example-typescript-nyc-mocha-coverage",
  "version": "1.0.0",
  "description": "Example typescript project with unit and code coverage support using NYC, Typescript, and Mocha.",
  "main": "index.js",
  "scripts": {
    "lint": "tslint --project tsconfig.json --format stylish",
    "test": "mocha",
    "coverage": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philipbeel/example-typescript-nyc-mocha-coverage.git"
  },
  "keywords": [
    "gulp",
    "typescript",
    "mocha",
    "nyc"
  ],
  "author": "YouView CloudServices <team.cloudservices@youview.com> (https://www.youview.com)",
  "license": "ISC",
  "homepage": "https://github.com/philipbeel/example-typescript-nyc-mocha-coverage#readme",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "chai": "3.5.0",
    "istanbul": "0.4.5",
    "jsdom": "^11.1.0",
    "mocha": "3.2.0",
    "nyc": "^11.0.3",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.3.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/_test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "engine": {
    "node": "~6.9.2"
  }
}
